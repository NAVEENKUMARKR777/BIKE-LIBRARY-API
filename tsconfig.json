{
    "compilerOptions": {
      "module": "commonjs",                      // Module system to be used
      "declaration": true,                       // Generate .d.ts files
      "removeComments": true,                    // Remove comments during the compilation
      "emitDecoratorMetadata": true,             // Emit design-type metadata for decorated declarations
      "experimentalDecorators": true,            // Enable experimental support for decorators
      "target": "es6",                           // Specify ECMAScript target version
      "sourceMap": true,                         // Generate source maps for debugging
      "outDir": "./dist",                        // Output directory for compiled files
      "baseUrl": "./src",                        // Base directory for non-relative module names
      "typeRoots": ["node_modules/@types"],      // Specify the location of type definitions
      "lib": ["es2017", "esnext.asynciterable"], // Specify library files to be included
      "strict": true,                            // Enable all strict type-checking options
      "noImplicitAny": true,                     // Raise error on expressions and declarations with an implied 'any' type
      "skipLibCheck": true                       // Skip type checking of declaration files
    },
    "include": ["src/**/*"],                     // Include all TypeScript files in the src directory
    "exclude": ["node_modules", "dist"]         // Exclude the node_modules and dist directories
  }
  